start
  number count = 0;  
  repeat {
    count = count + 1;
    if (count == 3) {  
      continue;
    }

    show(count);
    
    if (count == 4) {
      stop;
    }  

  } until (count == 4)

  list_of text colors = ["Red", "Green", "Blue"]; 
  for (number i = 0; i <= 2; i = i + 1) {  
    show(i);
    show(colors[i]);
  }
end
